        <map key="人事信息" value="信息中心, /admin/hr/build.html"></map>
        <map key="人事信息" value="岗位信息, /admin/hr/position/build.html"></map>
        <map key="人事信息" value="职务信息, /admin/hr/job/build.html"></map>
        <map key="人事信息" value="人事活动, /admin/hr/action.html"></map>
        <map key="权限管理" value="角色管理, /admin/auth/role.html"></map>
        <map key="权限管理" value="功能权限, /admin/auth/resources.html"></map>
    </setting>

    <setting name="employeeType" enabled="true">
        <map key="试用期" value="1"></map>
        <map key="在职" value="2"></map>
        <map key="离职" value="3"></map>
        <map key="休假" value="4"></map>
        <map key="停职" value="5"></map>
        <map key="退休" value="6"></map>
        <map key="自离" value="7"></map>
    </setting>

    <setting name="subfix" enabled="true" value=".html"></setting>

    <setting name="initSecurity" enabled="true" value="123456"></setting>

    <setting name="permissionSource" enabled="true">
        <map key="登录权限" value="system:login:login"></map>

        <map key="菜单权限" value="system:menu:view"></map>
        <map key="菜单权限" value="system:menu:create"></map>
        <map key="菜单权限" value="system:menu:delete"></map>
        <map key="菜单权限" value="system:menu:update"></map>
    </setting>

    <setting name="role" enabled="true" value="超级管理员">
        <map key="登录权限" value="system:login:login"></map>

        <map key="菜单权限" value="system:menu:view"></map>
        <map key="菜单权限" value="system:menu:create"></map>
        <map key="菜单权限" value="system:menu:delete"></map>
        <map key="菜单权限" value="system:menu:update"></map>
    </setting>

</config>