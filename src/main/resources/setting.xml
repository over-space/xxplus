        <map key="CP1000" value="起航软件, 起航软件有限公司, default.jpg"></map>
    </setting>

    <!-- 系统内置用户  -->
    <setting name="admin" enabled="true">
        <map key="admin" value="123456,CP1000"></map>
    </setting>

    <setting name="role" enabled="true">
        <map key="超级管理员" value="admin, 1, 超级管理员"></map>
    </setting>

    <setting name="menu" enabled="true">
        <map key="系统管理" value="菜单管理, /admin/menu/build.html"></map>
        <map key="系统管理" value="系统设置, /admin/system/build.html"></map>
        <map key="系统管理" value="角色管理, /admin/role/build.html"></map>
        <map key="系统管理" value="日志管理, /admin/log/build.html"></map>
        <map key="系统管理" value="安全设置, /admin/safe/build.html"></map>
